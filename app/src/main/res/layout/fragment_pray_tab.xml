<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin_activity_default">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/spin_recommend" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_activity_default"
        android:background="@drawable/bg_pray"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/pray_img" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Quisque ex eros, volutpat bibendum ligula in, mollis tincidunt quam. Vestibulum eget lorem vehicula, rutrum lacus et, suscipit lectus."
            android:textColor="#8F9092"
            android:textSize="17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_activity_default"
        android:background="@drawable/bg_pray"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur feugiat tincidunt tortor ac finibus. Praesent blandit, est in scelerisque tempus, justo est ultricies eros, congue posuere risus justo at lorem. Aliquam tristique pharetra elementum. Vestibulum malesuada purus eu justo blandit tempor."
            android:textColor="#8F9092"
            android:textSize="17sp" />
    </LinearLayout>
</LinearLayout>