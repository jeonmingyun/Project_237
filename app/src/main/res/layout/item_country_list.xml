<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/countryContainer"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/connect_hori_divider"
    android:background="@drawable/bg_shape_gray"
    android:orientation="vertical"
    android:paddingStart="8dp"
    android:paddingTop="15dp"
    android:paddingEnd="8dp"
    android:paddingBottom="15dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="인도네시아"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/flag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/flag_indonesia" />

    <TextView
        android:id="@+id/people"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="선교사님 : 12"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/prayCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="기도수 : 2233"
        android:textSize="16sp" />
</LinearLayout>