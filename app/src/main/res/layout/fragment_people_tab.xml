<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/margin_activity_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/langContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="언어"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appCompatButton2"
            style="@style/tabTextGray"
            android:text="공식언어"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView3"
            style="@style/tabHighlightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="말레가시아어\n프랑스어"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton2"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton2"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton2" />

        <TextView
            android:id="@+id/appCompatButton3"
            style="@style/tabTextGray"
            android:layout_marginStart="10dp"
            android:text="문맹률"
            app:layout_constraintStart_toEndOf="@+id/appCompatButton2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            style="@style/tabHighlightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="23.3%"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton3"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton3"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="· 반투어를 사용하는 아프리카 남부와 가깝지만 동남아시아 어군에 속 하는 말라가시어를 사용한다. \n\n· 부족별로 방언이 있지만 소통이 가능하다. \n\n· 문자는 로마자로 표기한다."
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/populationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/langContainer">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:text="인구"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appCompatButton21"
            style="@style/tabTextGray"
            android:text="인구수"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView31"
            style="@style/tabHighlightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="28M"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton21"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton21"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton21" />

        <TextView
            android:id="@+id/appCompatButton31"
            style="@style/tabTextGray"
            android:layout_marginStart="10dp"
            android:text="인구순위"
            app:layout_constraintStart_toEndOf="@+id/appCompatButton21"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView41"
            style="@style/tabHighlightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="201"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton31"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton31"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton31" />

        <TextView
            android:id="@+id/appCompatButton311"
            style="@style/tabTextGray"
            android:layout_marginStart="10dp"
            android:text="민족수"
            app:layout_constraintStart_toEndOf="@+id/appCompatButton31"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView411"
            style="@style/tabHighlightText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="18"
            app:layout_constraintEnd_toEndOf="@+id/appCompatButton311"
            app:layout_constraintStart_toStartOf="@+id/appCompatButton311"
            app:layout_constraintTop_toBottomOf="@+id/appCompatButton311" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="· 인구의 90% 이상을 말라가시족으로 분류하나, 여러 부족을 통칭하는 이름이다. \n\n· 그 중 가장 큰 부족은 전체 인구의 1⁄4 정도 되는 메리나족으로 인도네시아 혈통이 강하게 드러나며, 주로 내륙고원에 거주한다."
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/textView31" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>