<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="tabHighlightText">
        <item name="android:textColor">@color/app_pink</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="tabTextGray">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/app_gray_light</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="yellowHeartCheckBox">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:button">@android:color/transparent</item>
    </style>

    <style name="toggleBtn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/switch_btn</item>
        <item name="android:checked">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>


    <style name="bottomBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/btn_bg_shape_yellow</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numberPickerSizeSmall">
        <item name="android:textSize">30sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="numberPickerSizeNormal">
        <item name="android:textSize">40sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>