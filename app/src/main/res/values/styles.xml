<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="toggleBtn">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/switch_btn</item>
        <item name="android:checked">true</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>


    <style name="bottomBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:background">@drawable/btn_bg_shape_yellow</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="numberPickerSizeSmall">
        <item name="android:textSize">30sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="numberPickerSizeNormal">
        <item name="android:textSize">40sp</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

</resources>